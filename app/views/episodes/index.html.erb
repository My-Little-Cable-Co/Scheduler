<p id="notice"><%= notice %></p>

<div class="breadcrumbs">
  <div class="crumb">
    <div class="parent-collection">
      <%= link_to 'Shows', shows_path %>
    </div>
    <div class="crumb-content">
      <%= @show.title %>
    </div>
  </div>
  <div class="seperator">/</div>
  <div class="crumb">
    <div class="parent-collection">
      <%= link_to 'Seasons', show_seasons_path(@show) %>
    </div>
    <div class="crumb-content">
      <%= @season.label %>
    </div>
  </div>
  <div class="seperator">/</div>
  <div class="crumb">
    <div class="crumb-content">
      Episodes
    </div>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Episode Number</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.name %></td>
        <td><%= link_to 'Show', show_season_episode_path(@show, @season, episode) %></td>
        <td><%= link_to 'Edit', edit_show_season_episode_path(@show, @season, episode) %></td>
        <td><%= button_to 'Destroy', show_season_episode_path(@show, @season, episode), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_show_season_episode_path(@show, @season) %>
