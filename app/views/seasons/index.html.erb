<p id="notice"><%= notice %></p>

<h1><%= link_to 'Shows', shows_path %> ➔ <%= @show.title %> ➔ Seasons</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.label %></td>
        <td><%= link_to 'Episodes', show_season_episodes_path(@show, season) %></td>
        <td><%= link_to 'Edit', edit_show_season_path(@show, season) %></td>
        <td><%= button_to 'Destroy', [@show, season], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Season', new_show_season_path(@show) %>
