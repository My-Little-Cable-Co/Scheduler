<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<%= button_to "Re-scan", rescan_shows_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.title %></td>
        <td><%= link_to 'Seasons', show_seasons_path(show) %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= button_to 'Destroy', show, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path %>
